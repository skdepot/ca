<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_return_form" model="ir.ui.view">
            <field name="name">sale.return.form</field>
            <field name="model">sale.return</field>
            <field name="arch" type="xml">
                <form string="Sale Return">
                    <header>
                        <button name="action_confirm" states="draft" string="Confirm" type="object" class="oe_highlight"
                                groups="wedo_sale_return.group_sale_return_user"/>
                        <button name="action_reset_draft" states="cancel,confirm" string="Reset Draft" type="object" class="oe_highlight"
                                groups="wedo_sale_return.group_sale_return_user"/>
                        <button name="action_process" string="Process" type="object" states="confirm" class="oe_highlight"
                                groups="wedo_sale_return.group_sale_return_manager"/>
                        <button name="action_cancel" type="object" states="done,draft" string="Cancel" class="oe_highlight"
                                groups="wedo_sale_return.group_sale_return_manager"/>
                        <field name="state" widget="statusbar"  readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="buttons">
                            <button name="action_open_picking_invoice" type="object"
                                    class="oe_stat_button" icon="fa-file-text"
                                    attrs="{'invisible': [('invoice_count','=', 0)]}">
                                <field name="invoice_count" widget="statinfo"/>
                            </button>
                            <button name="action_open_picking" type="object"
                                    class="oe_stat_button" icon="fa-truck"
                                    attrs="{'invisible': [('picking_count','=', 0)]}">
                                <field name="picking_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <span class="o_form_label"> Order Name </span>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group col="4" colspan="2">
                            <field name="sale"  attrs="{'readonly': [('state','!=', 'draft')]}"/>
                            <field name="date_order"  attrs="{'readonly': [('state','!=', 'draft')]}"/>

                            <field name="partner_id" widget="res_partner_many2one" context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}"  placeholder="Name, TIN, Email, or Reference"
                                   attrs="{'readonly': [('state','!=', 'draft')]}"/>
                            <field name="sale_order_id" domain="[('partner_id','=',partner_id)]"
                                   attrs="{'readonly': [('state','!=', 'draft')],'invisible': [('sale','!=', True)],'required': [('sale','=', True)]}"/>
                            <field name="reference" attrs="{'readonly': [('state','!=', 'draft')]}"  />
                            <field name="reason_id" attrs="{'readonly': [('state','!=', 'draft')]}" options="{'no_create_edit': True,'no_create': True}"/>
                            <field name="return_journal_id"  domain="[('type','=','sale'),('company_id','=',company_id)]" attrs="{'readonly': [('state','!=', 'draft')]}"/>
                            <field name="picking_ids" widget="many2many_tags" force_save="1" readonly="1"/>
                            <field name="picking_type_id" options="{'no_create': True}"  attrs="{'readonly': [('state','!=', 'draft')]}" groups="stock.group_stock_multi_locations"/>
                            <field name="company_id"  attrs="{'readonly': [('state','!=', 'draft')]}" invisible="1"/>
                            <field name="default_location_dest_id_usage" invisible="1"/>
                            <field name="user_id"  force_save="1"  invisible="1"/>
                        </group>
                        <notebook>
                            <page string="Lines">
                                <field name="order_line_ids"
                                       widget="section_and_note_one2many"
                                       mode="tree"
                                >
                                    <tree string="Lines" editable="bottom">
                                        <control>
                                            <create name="add_product_control" string="Add a product"/>
                                            <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
                                            <create name="add_note_control" string="Add a note" context="{'default_display_type': 'line_note'}"/>
                                        </control>
                                        <field name="sale_order_id" invisible="1"/>
                                        <field name="product_id" attrs="{'readonly': [('state','!=', 'draft'),('state','!=', False)]}" />
                                        <field name="product_qty" readonly="1"  force_save="1"/>
                                        <field name="product_uom" attrs="{'readonly': [('state','!=', 'draft'),('state','!=', False)]}"/>
                                        <field name="price_unit" attrs="{'readonly': [('state','!=', 'draft'),('state','!=', False)]}"/>
                                        <field name="qty_return"  attrs="{'readonly': [('state','!=', 'draft'),('state','!=', False)]}"/>
                                        <field name="price_subtotal"/>
                                        <field name="received_qty" force_save="1" readonly="1"/>
                                        <field name="invoiced_qty" force_save="1" readonly="1"/>
                                        <field name="state" invisible="1"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <div class="oe_subtotal_footer_separator oe_inline">
                                        <label for="total"/>
                                    </div>
                                    <field name="total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="sale_return_view_tree" model="ir.ui.view">
            <field name="name">sale.return.view.tree</field>
            <field name="model">sale.return</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="partner_id"/>
                    <field name="sale_order_id"/>
                    <field name="date_order"/>
                    <field name="state"/>
                    <field name="total"/>
                </tree>
            </field>
        </record>
        <record id="sale_return_view_pivot" model="ir.ui.view">
            <field name="name">sale.return.view.pivot</field>
            <field name="model">sale.return</field>
            <field name="arch" type="xml">
                <pivot  display_quantity="True" sample="1">
                    <field name="partner_id" type="row"/>
                    <field name="total" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="sale_return_view_graph" model="ir.ui.view">
            <field name="name">sale.return.view.graph</field>
            <field name="model">sale.return</field>
            <field name="arch" type="xml">
                <graph string="Sale Return" sample="1">
                    <field name="partner_id" type="row"/>
                    <field name="total" type="measure"/>
                </graph>
            </field>
        </record>
        <record id="sale_return_search" model="ir.ui.view">
            <field name="name">sale.return.filter</field>
            <field name="model">sale.return</field>
            <field name="arch" type="xml">
                <search string="Sale Return Filter">
                    <field name="sale"/>
                    <field name="name"/>
                    <field name="picking_ids"/>
                    <field name="sale_order_id"/>
                    <field name="return_journal_id"/>
                    <field name="partner_id"/>
                    <field name="date_order"/>
                    <field name="state"/>
                    <group expand="0" string="Group By">
                        <filter string="Customer" name="groupby_partner" domain="[]" context="{'group_by': 'partner_id'}"/>
                        <filter string="Sale" name="groupby_sale" domain="[]" context="{'group_by': 'sale'}"/>
                        <filter string="State" name="groupby_state" domain="[]" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="sale_return_action">
            <field name="name">Sale Return</field>
            <field name="res_model">sale.return</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="view_id" ref="sale_return_view_tree"/>
            <field name="search_view_id" ref="sale_return_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a request for return
                </p>
            </field>
        </record>

        <!-- Top menu item -->
        <menuitem name="Sale Return"
                  id="menu_return_sale_root" groups="wedo_sale_return.group_sale_return_user"
                  web_icon="wedo_sale_return,static/description/icon.png"
                  sequence="4"/>

        <menuitem id="menu_sale_form_action" parent="menu_return_sale_root" action="sale_return_action" sequence="1" groups="wedo_sale_return.group_sale_return_user"/>

        <!--Reason-->

        <record id="sale_return_reason_form" model="ir.ui.view">
            <field name="name">sale.return.reason.form</field>
            <field name="model">sale.return.reason</field>
            <field name="arch" type="xml">
                <form string="Sale Return Reason">

                    <sheet>
                        <div class="oe_title">
                            <span class="o_form_label"> Reason </span>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="sale_return_reason_view_tree" model="ir.ui.view">
            <field name="name">sale.return.reason.view.tree</field>
            <field name="model">sale.return.reason</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="sale_return_reason_search" model="ir.ui.view">
            <field name="name">sale.return.reason.filter</field>
            <field name="model">sale.return.reason</field>
            <field name="arch" type="xml">
                <search string="Sale Return Reason">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="sale_return_reason_action">
            <field name="name">Sale Return Reason</field>
            <field name="res_model">sale.return.reason</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="sale_return_reason_view_tree"/>
            <field name="search_view_id" ref="sale_return_reason_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a  return Reason
                </p>
            </field>
        </record>

        <menuitem id="menu_sale_reason_form_action" parent="menu_return_sale_root" action="sale_return_reason_action"
                  sequence="2" groups="wedo_sale_return.group_sale_return_manager"/>

    </data>
</odoo>
